<UserControl x:Class="ClipMate.App.Controls.EditorOptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="450">
    
    <Grid>
        <dxlc:LayoutControl Orientation="Vertical" Padding="10">
            
            <!-- Theme -->
            <dxlc:LayoutGroup Header="Appearance" Orientation="Vertical">
                <dxlc:LayoutItem Label="Theme:">
                    <ComboBox x:Name="ThemeComboBox"
                              SelectedValue="{Binding Theme, Mode=TwoWay}"
                              SelectedValuePath="Tag">
                        <ComboBoxItem Content="Visual Studio Dark" Tag="vs-dark"/>
                        <ComboBoxItem Content="Visual Studio Light" Tag="vs"/>
                        <ComboBoxItem Content="High Contrast" Tag="hc-black"/>
                    </ComboBox>
                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>

            <!-- Font Settings -->
            <dxlc:LayoutGroup Header="Font" Orientation="Vertical">
                <dxlc:LayoutItem Label="Font Family:">
                    <TextBox Text="{Binding FontFamily, Mode=TwoWay}"/>
                </dxlc:LayoutItem>
                
                <dxlc:LayoutItem Label="Font Size:">
                    <dxe:SpinEdit Value="{Binding FontSize, Mode=TwoWay}"
                                  MinValue="8"
                                  MaxValue="72"
                                  Increment="1"/>
                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>

            <!-- Editor Behavior -->
            <dxlc:LayoutGroup Header="Editor Behavior" Orientation="Vertical">
                <dxlc:LayoutItem Label="Tab Size:">
                    <dxe:SpinEdit Value="{Binding TabSize, Mode=TwoWay}"
                                  MinValue="1"
                                  MaxValue="8"
                                  Increment="1"/>
                </dxlc:LayoutItem>
                
                <CheckBox Content="Word Wrap" 
                         IsChecked="{Binding WordWrap, Mode=TwoWay}"
                         Margin="0,5"/>
                
                <CheckBox Content="Show Line Numbers" 
                         IsChecked="{Binding ShowLineNumbers, Mode=TwoWay}"
                         Margin="0,5"/>
                
                <CheckBox Content="Show Minimap" 
                         IsChecked="{Binding ShowMinimap, Mode=TwoWay}"
                         Margin="0,5"/>
                
                <CheckBox Content="Smooth Scrolling" 
                         IsChecked="{Binding SmoothScrolling, Mode=TwoWay}"
                         Margin="0,5"/>
            </dxlc:LayoutGroup>

            <!-- UI Options -->
            <dxlc:LayoutGroup Header="User Interface" Orientation="Vertical">
                <CheckBox Content="Show Toolbar" 
                         IsChecked="{Binding ShowToolbar, Mode=TwoWay}"
                         Margin="0,5"/>
                
                <CheckBox Content="Display Word and Character Counts" 
                         IsChecked="{Binding DisplayWordAndCharacterCounts, Mode=TwoWay}"
                         Margin="0,5"/>
            </dxlc:LayoutGroup>

            <!-- Actions -->
            <dxlc:LayoutGroup Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Reset to Defaults"
                        x:Name="ResetButton"
                        Click="OnResetClicked"
                        Margin="0,0,10,0"
                        Padding="10,5"/>
                
                <Button Content="Apply"
                        x:Name="ApplyButton"
                        Click="OnApplyClicked"
                        Padding="10,5"/>
            </dxlc:LayoutGroup>
            
        </dxlc:LayoutControl>
    </Grid>
</UserControl>
