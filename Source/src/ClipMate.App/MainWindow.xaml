<Window x:Class="ClipMate.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipMate.App"
        xmlns:vm="clr-namespace:ClipMate.App.ViewModels"
        xmlns:views="clr-namespace:ClipMate.App.Views"
        mc:Ignorable="d"
        Title="ClipMate - Clipboard Manager" 
        Height="700" 
        Width="1200"
        MinHeight="500"
        MinWidth="800">
    
    <Window.InputBindings>
        <KeyBinding Key="T" Modifiers="Control+Shift" Command="{Binding ManageTemplatesCommand}"/>
    </Window.InputBindings>
    
    <Window.Resources>
        <!-- Common Styles - Compact Utility Style -->
        <Style x:Key="PaneHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="4,4,4,6"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <Style x:Key="PaneBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
    </Window.Resources>

    <!-- Main Grid with menu bar, toolbar, and content -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Menu Bar Row -->
            <RowDefinition Height="Auto"/>
            <!-- Toolbar Row -->
            <RowDefinition Height="Auto"/>
            <!-- Main Content Row -->
            <RowDefinition Height="*"/>
            <!-- Status Bar Row -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Menu Bar - Compact Style -->
        <Menu Grid.Row="0" FontSize="9" FontFamily="Segoe UI" Padding="2,1">
            <MenuItem Header="_File" FontSize="9">
                <MenuItem Header="_New Collection..." FontSize="9" Padding="6,3"/>
                <MenuItem Header="_Open Collection..." FontSize="9" Padding="6,3"/>
                <Separator/>
                <MenuItem Header="_Exit" Click="Exit_Click" FontSize="9" Padding="6,3"/>
            </MenuItem>
            <MenuItem Header="_Edit" FontSize="9">
                <MenuItem Header="_Copy" InputGestureText="Ctrl+C" FontSize="9" Padding="6,3"/>
                <MenuItem Header="_Paste" InputGestureText="Ctrl+V" FontSize="9" Padding="6,3"/>
                <MenuItem Header="_Delete" InputGestureText="Del" FontSize="9" Padding="6,3"/>
            </MenuItem>
            <MenuItem Header="_Tools" FontSize="9">
                <MenuItem Header="_Text Tools" Click="TextTools_Click" InputGestureText="Ctrl+T" FontSize="9" Padding="6,3"/>
                <MenuItem Header="_Quick Access" InputGestureText="Ctrl+Shift+V" FontSize="9" Padding="6,3"/>
            </MenuItem>
            <MenuItem Header="T_emplates" FontSize="9">
                <MenuItem Header="_Manage Templates..." Click="ManageTemplates_Click" InputGestureText="Ctrl+Shift+T" FontSize="9" Padding="6,3"/>
                <Separator/>
                <MenuItem Header="_Insert Template" x:Name="InsertTemplateMenu" FontSize="9" Padding="6,3">
                    <!-- Template items will be populated dynamically -->
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Help" FontSize="9">
                <MenuItem Header="_About ClipMate" FontSize="9" Padding="6,3"/>
            </MenuItem>
        </Menu>
        
        <!-- Toolbar - Compact Style (Placeholder - will add proper 16x16 icons later) -->
        <ToolBarTray Grid.Row="1" Background="#F0F0F0">
            <ToolBar Height="26" Padding="2,1" FontSize="9" FontFamily="Segoe UI">
                <Button Content="New" ToolTip="New Collection" Height="22" Width="45" Padding="4,2"/>
                <Button Content="Folder" ToolTip="New Folder" Height="22" Width="50" Padding="4,2"/>
                <Separator/>
                <Button Content="Copy" ToolTip="Copy to Clipboard" Height="22" Width="45" Padding="4,2"/>
                <Button Content="Paste" ToolTip="Paste" Height="22" Width="45" Padding="4,2"/>
                <Button Content="Delete" ToolTip="Delete Clip" Height="22" Width="50" Padding="4,2"/>
                <Separator/>
                <Button Content="Search" ToolTip="Search Clips" Height="22" Width="55" Padding="4,2"/>
            </ToolBar>
        </ToolBarTray>
        
        <!-- ClipMate 7.5 Style Layout: Left Tree + Right (Top List + Bottom Preview) -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- Left Pane: Collections & Folders Tree -->
                <ColumnDefinition Width="250" MinWidth="150" MaxWidth="400"/>
                <ColumnDefinition Width="Auto"/>
                <!-- Right Pane: Clip List (top) + Preview (bottom) -->
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Left Pane: Collections & Folders -->
            <Border Grid.Column="0" Style="{StaticResource PaneBorderStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                              Text="Collection Tree" 
                              Style="{StaticResource PaneHeaderStyle}"/>
                    
                    <views:CollectionTreeView Grid.Row="1" x:Name="CollectionTree"/>
                </Grid>
            </Border>

            <!-- Splitter between Left and Right - Compact -->
            <GridSplitter Grid.Column="1" 
                         Width="3" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Stretch"
                         Background="#E0E0E0"
                         ShowsPreview="True"/>

            <!-- Right Side: Clip List (Top) + Preview Pane (Bottom) -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <!-- Clip List Area -->
                    <RowDefinition Height="*" MinHeight="200"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Preview Area -->
                    <RowDefinition Height="300" MinHeight="150"/>
                </Grid.RowDefinitions>

                <!-- Clip List Section -->
                <Border Grid.Row="0" Style="{StaticResource PaneBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Search Panel (moved from top of window) -->
                        <views:SearchPanel Grid.Row="0" x:Name="SearchPanel" Margin="0,0,0,5"/>

                        <!-- Clip List - DataGrid with sortable columns (Windows utility compact style) -->
                        <DataGrid Grid.Row="1" 
                                 x:Name="ClipDataGrid"
                                 ItemsSource="{Binding Clips}"
                                 AutoGenerateColumns="False"
                                 SelectionMode="Single"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="False"
                                 GridLinesVisibility="Horizontal"
                                 HeadersVisibility="Column"
                                 FontSize="9"
                                 FontFamily="Segoe UI"
                                 RowHeight="18"
                                 ColumnHeaderHeight="20"
                                 BorderThickness="0"
                                 Background="White"
                                 AlternatingRowBackground="#F9F9F9"
                                 SelectionChanged="ClipDataGrid_SelectionChanged">
                            <!-- Compact Row Style -->
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="MinHeight" Value="18"/>
                                    <Setter Property="Padding" Value="0"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <!-- Compact Column Header Style -->
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Height" Value="20"/>
                                    <Setter Property="Padding" Value="4,2"/>
                                    <Setter Property="FontSize" Value="9"/>
                                    <Setter Property="FontWeight" Value="Normal"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <!-- Compact Cell Style -->
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="4,2"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                            </DataGrid.CellStyle>
                            <DataGrid.Columns>
                                <!-- Title Column (Clip Content Preview) -->
                                <DataGridTextColumn Header="Title" 
                                                   Binding="{Binding DisplayTitle}" 
                                                   Width="*" 
                                                   CanUserSort="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            <Setter Property="ToolTip" Value="{Binding TextContent}"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <!-- SortKey Column -->
                                <DataGridTextColumn Header="SortKey" 
                                                   Binding="{Binding Id}" 
                                                   Width="80" 
                                                   CanUserSort="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="#666666"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <!-- Date/Time Column -->
                                <DataGridTextColumn Header="Date/Time" 
                                                   Binding="{Binding CapturedAt, StringFormat='{}{0:M/d/yyyy h:mm tt}'}" 
                                                   Width="140" 
                                                   CanUserSort="True"
                                                   SortDirection="Descending">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#666666"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- Splitter between List and Preview - Compact -->
                <GridSplitter Grid.Row="1" 
                             Height="3" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Center"
                             Background="#E0E0E0"
                             ShowsPreview="True"/>

                <!-- Preview Pane Section (Bottom) -->
                <Border Grid.Row="2" Style="{StaticResource PaneBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Preview Header with Tabs -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                      Text="Preview" 
                                      Style="{StaticResource PaneHeaderStyle}"/>
                            
                            <!-- Preview Format Tabs -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,5">
                                <Button Content="Text" Width="60" Height="25" Margin="2,0" x:Name="TextTabButton" Click="PreviewTab_Click" Tag="Text"/>
                                <Button Content="Rich Text" Width="70" Height="25" Margin="2,0" x:Name="RichTextTabButton" Click="PreviewTab_Click" Tag="RichText"/>
                                <Button Content="HTML" Width="60" Height="25" Margin="2,0" x:Name="HtmlTabButton" Click="PreviewTab_Click" Tag="Html"/>
                            </StackPanel>
                        </Grid>

                        <!-- Preview Content Area -->
                        <ScrollViewer Grid.Row="1" 
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     Background="White">
                            <TextBlock x:Name="PreviewTextBlock"
                                      Text="Select a clip to preview..."
                                      TextWrapping="Wrap"
                                      Foreground="Gray"
                                      FontStyle="Italic"
                                      Margin="10"
                                      FontFamily="Consolas"/>
                        </ScrollViewer>

                        <!-- Preview Actions - Compact Style -->
                        <StackPanel Grid.Row="2" 
                                   Orientation="Horizontal" 
                                   HorizontalAlignment="Right"
                                   Margin="0,4,0,0">
                            <Button Content="Copy" 
                                   x:Name="CopyButton"
                                   Width="70" 
                                   Height="22" 
                                   FontSize="9"
                                   Padding="8,2"
                                   Margin="4,0"
                                   Click="CopyButton_Click"/>
                            <Button Content="Delete" 
                                   x:Name="DeleteButton"
                                   Width="70" 
                                   Height="22" 
                                   FontSize="9"
                                   Padding="8,2"
                                   Margin="4,0"
                                   Background="#FFEBEE"
                                   Foreground="#C62828"
                                   Click="DeleteButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Status Bar - Compact Style -->
        <Border Grid.Row="3" 
               x:Name="StatusBar"
               BorderBrush="#CCCCCC" 
               BorderThickness="0,1,0,0" 
               Height="20"
               Padding="4,2"
               Background="#F0F0F0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          x:Name="StatusBarLeft"
                          Text="Ready" 
                          FontSize="9" 
                          Foreground="#666666"
                          Margin="0,0,12,0"/>
                
                <TextBlock Grid.Column="2" 
                          x:Name="StatusBarRight"
                          Text="0 clips | 0 bytes, 0 chars, 0 words" 
                          FontSize="9" 
                          Foreground="#666666"/>
            </Grid>
        </Border>
    </Grid>
</Window>