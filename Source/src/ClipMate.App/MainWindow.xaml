<Window x:Class="ClipMate.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:local="clr-namespace:ClipMate.App"
        xmlns:vm="clr-namespace:ClipMate.App.ViewModels"
        xmlns:views="clr-namespace:ClipMate.App.Views"
        xmlns:converters="clr-namespace:ClipMate.App.Converters"
        mc:Ignorable="d"
        Title="ClipMate - Clipboard Manager"
        WindowStartupLocation="CenterScreen"
        Height="700" 
        Width="1400"
        MinHeight="500"
        MinWidth="1000"
        StateChanged="Window_StateChanged">

    <Window.Resources>
        <!-- Converters will be added when implemented -->
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="T" Modifiers="Control+Shift" Command="{Binding ManageTemplatesCommand}"/>
    </Window.InputBindings>

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Text Tools" Click="TextTools_Click" InputGestureText="Ctrl+T"/>
            </MenuItem>
            <MenuItem Header="T_emplates">
                <MenuItem Header="_Manage Templates..." Click="ManageTemplates_Click" InputGestureText="Ctrl+Shift+T"/>
            </MenuItem>
        </Menu>

        <!-- Status Bar at Bottom -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="StatusBarLeft" Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="StatusBarRight" Text="0 clips | 0 bytes, 0 chars, 0 words"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="150" MaxWidth="400"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Left Pane: Collection Tree -->
            <GroupBox Grid.Column="0" Header="Collections">
                <views:CollectionTreeView x:Name="CollectionTree"/>
            </GroupBox>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                         Width="5" 
                         HorizontalAlignment="Stretch"
                         Background="Transparent"/>

            <!-- Center: DevExpress GridControl -->
            <GroupBox Grid.Column="2" Header="Clips">
                <dxg:GridControl x:Name="ClipDataGrid"
                                ItemsSource="{Binding Clips}"
                                AutoGenerateColumns="None"
                                SelectionMode="Row"
                                CurrentItemChanged="ClipDataGrid_SelectionChanged">
                    <dxg:GridControl.View>
                        <dxg:TableView AllowEditing="False"
                                      ShowGroupPanel="False"
                                      AutoWidth="True"
                                      NavigationStyle="Row"
                                      ShowIndicator="False"/>
                    </dxg:GridControl.View>
                    <dxg:GridControl.Columns>
                        <!-- Title Column -->
                        <dxg:GridColumn FieldName="DisplayTitle" 
                                       Header="Title"
                                       Width="*">
                            <dxg:GridColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayTitle}" 
                                              TextTrimming="CharacterEllipsis"
                                              ToolTip="{Binding TextContent}"/>
                                </DataTemplate>
                            </dxg:GridColumn.CellTemplate>
                        </dxg:GridColumn>

                        <!-- Date/Time Column -->
                        <dxg:GridColumn FieldName="CapturedAt" 
                                       Header="Date/Time"
                                       Width="140">
                            <dxg:GridColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CapturedAt, StringFormat='{}{0:M/d/yyyy h:mm tt}'}"/>
                                </DataTemplate>
                            </dxg:GridColumn.CellTemplate>
                        </dxg:GridColumn>
                    </dxg:GridControl.Columns>
                </dxg:GridControl>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
