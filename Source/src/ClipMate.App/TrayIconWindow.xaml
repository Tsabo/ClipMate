<Window x:Class="ClipMate.App.TrayIconWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
        xmlns:helpers="clr-namespace:ClipMate.App.Helpers"
        Title="TrayIconWindow"
        Width="0"
        Height="0"
        WindowStyle="None"
        ShowInTaskbar="False"
        Visibility="Hidden"
        AllowsTransparency="True"
        Background="Transparent">

    <dxmvvm:Interaction.Behaviors>
        <dx:NotifyIconService
            Icon="pack://application:,,,/ClipMate.App;component/Assets/icon.ico"
            Tooltip="ClipMate - Clipboard Manager"
            LeftClickCommand="{Binding ShowExplorerWindowCommand}">
            <dx:NotifyIconService.ContextMenu>
                <dxb:PopupMenu>
                    <dxb:BarButtonItem Content="Show ClipMate" Command="{Binding ShowExplorerWindowCommand}"
                                       Glyph="{helpers:EmojiIconSource Emoji='ðŸ“‹'}" />
                    <dxb:BarItemSeparator />
                    <dxb:BarButtonItem Content="Exit" Command="{Binding ExitApplicationCommand}"
                                       Glyph="{helpers:EmojiIconSource Emoji='ðŸšª'}" />
                </dxb:PopupMenu>
            </dx:NotifyIconService.ContextMenu>
        </dx:NotifyIconService>
    </dxmvvm:Interaction.Behaviors>
</Window>
