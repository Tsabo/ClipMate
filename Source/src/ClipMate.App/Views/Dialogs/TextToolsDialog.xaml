<dx:ThemedWindow x:Class="ClipMate.App.Views.Dialogs.TextToolsDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:models="clr-namespace:ClipMate.Core.Models;assembly=ClipMate.Core"
                 xmlns:converters="clr-namespace:ClipMate.App.Converters"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 mc:Ignorable="d"
                 Title="Text Tools" 
                 Height="600" 
                 Width="900"
                 MinHeight="400"
                 MinWidth="700"
                 WindowStartupLocation="CenterOwner"
                 ShowInTaskbar="False">
    
    <dx:ThemedWindow.DialogButtons>
        <dx:ThemedWindowDialogButton Content="Apply Transform" 
                                     Command="{Binding ApplyTransformCommand}"
                                     Placement="Left"
                                     AllowCloseWindow="False" />
        <dx:ThemedWindowDialogButton Content="Preview" 
                                     Command="{Binding PreviewTransformCommand}"
                                     Placement="Left"
                                     AllowCloseWindow="False" />
        <dx:ThemedWindowDialogButton Content="Copy Output" 
                                     Command="{Binding CopyToClipboardCommand}"
                                     Placement="Left"
                                     AllowCloseWindow="False" />
        <dx:ThemedWindowDialogButton Content="Swap ⇄" 
                                     Command="{Binding SwapInputOutputCommand}"
                                     ToolTip="Swap input and output"
                                     Placement="Left"
                                     AllowCloseWindow="False" />
        <dx:ThemedWindowDialogButton Content="Clear" 
                                     Command="{Binding ClearCommand}"
                                     Placement="Left"
                                     AllowCloseWindow="False" />
        <dx:ThemedWindowDialogButton Content="Close"
                                     IsCancel="True"
                                     Click="CloseButton_Click" />
    </dx:ThemedWindow.DialogButtons>
    
    <Window.Resources>
        <!-- Converters -->
        <converters:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tool Selection -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                      Text="Select Tool:" 
                      VerticalAlignment="Center"
                      Margin="0,0,12,0"/>

            <ComboBox Grid.Column="1" 
                     SelectedItem="{Binding SelectedTool}"
                     Height="32">
                <models:TextTool>ConvertCase</models:TextTool>
                <models:TextTool>SortLines</models:TextTool>
                <models:TextTool>RemoveDuplicateLines</models:TextTool>
                <models:TextTool>AddLineNumbers</models:TextTool>
                <models:TextTool>FindAndReplace</models:TextTool>
                <models:TextTool>CleanUpText</models:TextTool>
                <models:TextTool>ConvertFormat</models:TextTool>
            </ComboBox>
        </Grid>

        <!-- Tool Options Panel -->
        <Border Grid.Row="1" 
                BorderThickness="1"
                Padding="12"
                Margin="0,0,0,12">
            <StackPanel>
                <!-- ConvertCase Options -->
                <StackPanel Visibility="{Binding SelectedTool, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=ConvertCase}">
                    <TextBlock Text="Case Conversion Mode:" />
                    <ComboBox SelectedItem="{Binding CaseConversionMode}" >
                        <models:CaseConversion>Uppercase</models:CaseConversion>
                        <models:CaseConversion>Lowercase</models:CaseConversion>
                        <models:CaseConversion>TitleCase</models:CaseConversion>
                        <models:CaseConversion>SentenceCase</models:CaseConversion>
                    </ComboBox>
                </StackPanel>

                <!-- SortLines Options -->
                <StackPanel Visibility="{Binding SelectedTool, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=SortLines}">
                    <TextBlock Text="Sort Mode:" />
                    <ComboBox SelectedItem="{Binding SortMode}" >
                        <models:SortMode>Alphabetical</models:SortMode>
                        <models:SortMode>Numerical</models:SortMode>
                        <models:SortMode>Reverse</models:SortMode>
                    </ComboBox>
                </StackPanel>

                <!-- RemoveDuplicateLines Options -->
                <StackPanel Visibility="{Binding SelectedTool, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=RemoveDuplicateLines}">
                    <CheckBox Content="Case Sensitive" IsChecked="{Binding CaseSensitive}" />
                </StackPanel>

                <!-- AddLineNumbers Options -->
                <StackPanel Visibility="{Binding SelectedTool, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=AddLineNumbers}">
                    <TextBlock Text="Line Number Format:" />
                    <TextBox Text="{Binding LineNumberFormat}" />
                    <TextBlock Text="Examples: '{0}. ' or '[{0:D3}] '" 
                              Margin="0,4,0,0"/>
                </StackPanel>

                <!-- FindAndReplace Options -->
                <StackPanel Visibility="{Binding SelectedTool, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=FindAndReplace}">
                    <TextBlock Text="Find:" />
                    <TextBox Text="{Binding FindText}" Margin="0,0,0,8"/>
                    
                    <TextBlock Text="Replace:" />
                    <TextBox Text="{Binding ReplaceText}" Margin="0,0,0,8"/>
                    
                    <CheckBox Content="Use Regular Expression" IsChecked="{Binding UseRegex}" />
                    <CheckBox Content="Case Sensitive" IsChecked="{Binding CaseSensitive}" />
                </StackPanel>

                <!-- CleanUpText Options -->
                <StackPanel Visibility="{Binding SelectedTool, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=CleanUpText}">
                    <CheckBox Content="Remove Extra Spaces" IsChecked="{Binding RemoveExtraSpaces}" />
                    <CheckBox Content="Remove Extra Line Breaks" IsChecked="{Binding RemoveExtraLineBreaks}" />
                    <CheckBox Content="Trim Lines" IsChecked="{Binding TrimLines}" />
                </StackPanel>

                <!-- ConvertFormat Options -->
                <StackPanel Visibility="{Binding SelectedTool, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=ConvertFormat}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="From:" />
                            <ComboBox SelectedItem="{Binding SourceFormat}" >
                                <models:TextFormat>Plain</models:TextFormat>
                                <models:TextFormat>Html</models:TextFormat>
                                <models:TextFormat>Rtf</models:TextFormat>
                            </ComboBox>
                        </StackPanel>

                        <TextBlock Grid.Column="1" Text="→" 
                                  VerticalAlignment="Center" 
                                  Margin="12,24,12,0"/>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="To:" />
                            <ComboBox SelectedItem="{Binding TargetFormat}" >
                                <models:TextFormat>Plain</models:TextFormat>
                                <models:TextFormat>Html</models:TextFormat>
                                <models:TextFormat>Rtf</models:TextFormat>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Input/Output Panels -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Input Panel -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                          Text="Input:"/>

                <TextBox Grid.Row="1"
                        Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"/>
            </Grid>

            <!-- Output Panel -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                          Text="Output:" />

                <TextBox Grid.Row="1"
                        Text="{Binding OutputText}"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        IsReadOnly="True"
                        VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </Grid>
    </Grid>
</dx:ThemedWindow>
