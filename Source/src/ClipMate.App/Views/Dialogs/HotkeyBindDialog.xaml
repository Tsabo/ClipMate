<dx:ThemedWindow x:Class="ClipMate.App.Views.Dialogs.HotkeyBindDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 Title="Bind Hotkey"
                 Width="400"
                 Height="200"
                 WindowStartupLocation="CenterOwner"
                 ResizeMode="NoResize"
                 ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Instructions -->
        <TextBlock Grid.Row="0"
                   Text="Press the key combination you want to use:"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,15" />

        <!-- Captured Hotkey Display -->
        <Border Grid.Row="1"
                BorderBrush="Gray"
                BorderThickness="2"
                Background="White"
                Padding="15"
                VerticalAlignment="Center">
            <TextBlock x:Name="HotkeyDisplay"
                       Text="Press keys..."
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="DarkBlue" />
        </Border>

        <!-- Hint Text -->
        <TextBlock Grid.Row="2"
                   Text="Press ESC to cancel, Delete/Backspace to clear"
                   FontSize="11"
                   Foreground="Gray"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,10" />

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <dx:SimpleButton Content="OK"
                             x:Name="OkButton"
                             Width="80"
                             Margin="5"
                             IsEnabled="False"
                             Click="OkButton_Click" />
            <dx:SimpleButton Content="Cancel"
                             Width="80"
                             Margin="5"
                             Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</dx:ThemedWindow>
