<dx:ThemedWindow x:Class="ClipMate.App.Views.Dialogs.OptionsDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns:vm="clr-namespace:ClipMate.App.ViewModels"
                 xmlns:options="clr-namespace:ClipMate.App.Views.Options"
                 d:DataContext="{d:DesignInstance Type=vm:OptionsViewModel}"
                 mc:Ignorable="d"
                 Title="Options"
                 Width="800"
                 Height="625"
                 WindowStartupLocation="CenterOwner"
                 ResizeMode="CanResize"
                 ShowInTaskbar="False">

    <!-- DevExpress Dialog Buttons -->
    <dx:ThemedWindow.DialogButtons>
        <dx:ThemedWindowDialogButton Content="OK"
                                     Command="{Binding OkCommand}"
                                     IsDefault="True"
                                     DialogResult="OK" />
        <dx:ThemedWindowDialogButton Content="Cancel"
                                     Command="{Binding CancelCommand}"
                                     IsCancel="True"
                                     DialogResult="Cancel" />
        <dx:ThemedWindowDialogButton Content="Help"
                                     Command="{Binding HelpCommand}"
                                     DialogResult="None" />
    </dx:ThemedWindow.DialogButtons>

    <dx:DXTabControl SelectedIndex="{Binding SelectedTabIndex}">

        <!-- General Tab -->
        <dx:DXTabItem Header="General">
            <options:GeneralOptionsControl DataContext="{Binding General}" />
        </dx:DXTabItem>

        <!-- Pasting Tab -->
        <dx:DXTabItem Header="Pasting">
            <options:PastingOptionsControl DataContext="{Binding PowerPaste}" />
        </dx:DXTabItem>

        <!-- QuickPaste Tab -->
        <dx:DXTabItem Header="QuickPaste">
            <options:QuickPasteOptionsControl DataContext="{Binding QuickPaste}" />
        </dx:DXTabItem>

        <!-- Editor Tab -->
        <dx:DXTabItem Header="Editor">
            <options:EditorOptionsControl DataContext="{Binding Editor}" />
        </dx:DXTabItem>

        <!-- Capturing Tab -->
        <dx:DXTabItem Header="Capturing">
            <options:CapturingOptionsControl DataContext="{Binding Capturing}" />
        </dx:DXTabItem>

        <!-- Application Profiles Tab -->
        <dx:DXTabItem Header="App Profiles">
            <options:ApplicationProfilesOptionsControl DataContext="{Binding ApplicationProfiles}" />
        </dx:DXTabItem>

        <!-- Font/Language Tab (stub) -->
        <dx:DXTabItem Header="Font/Language">
            <StackPanel Margin="20">
                <TextBlock Text="Font/Language Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" />
                <TextBlock Text="This feature is coming in a future update." FontStyle="Italic" />
            </StackPanel>
        </dx:DXTabItem>

        <!-- Sounds Tab -->
        <dx:DXTabItem Header="Sounds">
            <options:SoundsOptionsControl DataContext="{Binding Sounds}" />
        </dx:DXTabItem>

        <!-- Hotkeys Tab -->
        <dx:DXTabItem Header="Hotkeys">
            <options:HotkeysOptionsControl DataContext="{Binding Hotkeys}" />
        </dx:DXTabItem>

        <!-- Database Tab -->
        <dx:DXTabItem Header="Database">
            <options:DatabaseOptionsControl DataContext="{Binding Database}" />
        </dx:DXTabItem>

        <!-- Advanced Tab -->
        <dx:DXTabItem Header="Advanced">
            <options:AdvancedOptionsControl DataContext="{Binding Advanced}" />
        </dx:DXTabItem>

    </dx:DXTabControl>

</dx:ThemedWindow>
