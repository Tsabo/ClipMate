<dx:ThemedWindow x:Class="ClipMate.App.Views.Dialogs.QuickPasteTargetDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                 xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                 Title="Input Required"
                 Width="450"
                 Height="200"
                 WindowStartupLocation="CenterOwner"
                 ResizeMode="NoResize"
                 ShowInTaskbar="False">

    <!-- DevExpress Dialog Buttons -->
    <dx:ThemedWindow.DialogButtons>
        <dx:ThemedWindowDialogButton Content="OK"
                                     Click="OkButton_Click"
                                     IsDefault="True"
                                     DialogResult="OK"
                                     MinWidth="80" />
        <dx:ThemedWindowDialogButton Content="Cancel"
                                     IsCancel="True"
                                     DialogResult="Cancel"
                                     MinWidth="80" />
    </dx:ThemedWindow.DialogButtons>

    <dxlc:LayoutControl Orientation="Vertical" Padding="16">

        <!-- Instruction Text -->
        <dxlc:LayoutItem>
            <TextBlock TextWrapping="Wrap" Margin="0,0,0,12">
                <Run Text="Enter the target specification in the format: " />
                <Run FontWeight="Bold" Text="PROCESSNAME:CLASSNAME" />
                <LineBreak />
                <Run Text="Leave CLASSNAME blank to target all windows from the process." />
            </TextBlock>
        </dxlc:LayoutItem>

        <!-- Target Input -->
        <dxlc:LayoutItem Label="Target:" LabelPosition="Left">
            <dxe:TextEdit x:Name="TargetTextBox"
                          EditValueChanged="TargetTextBox_EditValueChanged" />
        </dxlc:LayoutItem>

    </dxlc:LayoutControl>

</dx:ThemedWindow>
