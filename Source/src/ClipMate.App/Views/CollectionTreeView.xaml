<UserControl x:Class="ClipMate.App.Views.CollectionTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClipMate.App.Views"
             xmlns:vm="clr-namespace:ClipMate.App.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250"
             Background="#1E1E1E">
    <UserControl.Resources>
        <!-- TreeView Item Style -->
        <Style x:Key="TreeViewItemStyle" TargetType="{x:Type TreeViewItem}">
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="4,2"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#094771"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2D2E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Collection Template -->
        <HierarchicalDataTemplate DataType="{x:Type vm:CollectionTreeNode}" 
                                  ItemsSource="{Binding Folders}">
            <StackPanel Orientation="Horizontal" Margin="2">
                <TextBlock Text="ðŸ“" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontWeight="SemiBold"/>
            </StackPanel>
        </HierarchicalDataTemplate>

        <!-- Folder Template -->
        <HierarchicalDataTemplate DataType="{x:Type vm:FolderTreeNode}" 
                                  ItemsSource="{Binding SubFolders}">
            <StackPanel Orientation="Horizontal" Margin="2">
                <TextBlock Text="ðŸ“‚" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
            </StackPanel>
        </HierarchicalDataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#2D2D30" BorderBrush="#3F3F46" BorderThickness="0,0,0,1" Padding="8,6">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="âž• Collection" 
                        Command="{Binding CreateCollectionCommand}"
                        ToolTip="Create new collection"
                        Style="{StaticResource {x:Type Button}}"
                        Background="#007ACC"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="8,4"
                        Margin="0,0,4,0"
                        Cursor="Hand"/>
                <Button Content="âž• Folder" 
                        ToolTip="Create new folder in selected collection"
                        Style="{StaticResource {x:Type Button}}"
                        Background="#0E639C"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="8,4"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>

        <!-- Tree View -->
        <TreeView Grid.Row="1" 
                  ItemsSource="{Binding Collections}"
                  SelectedItemChanged="TreeView_SelectedItemChanged"
                  Background="#1E1E1E"
                  BorderThickness="0"
                  Padding="4"
                  ItemContainerStyle="{StaticResource TreeViewItemStyle}">
            <TreeView.Resources>
                <!-- Context Menu for Collections -->
                <ContextMenu x:Key="CollectionContextMenu">
                    <MenuItem Header="Add Folder" Command="{Binding CreateFolderCommand}"/>
                    <Separator/>
                    <MenuItem Header="Rename" />
                    <MenuItem Header="Delete" Command="{Binding DeleteCollectionCommand}"/>
                </ContextMenu>

                <!-- Context Menu for Folders -->
                <ContextMenu x:Key="FolderContextMenu">
                    <MenuItem Header="Add Subfolder"/>
                    <Separator/>
                    <MenuItem Header="Rename"/>
                    <MenuItem Header="Delete" Command="{Binding DeleteFolderCommand}"/>
                </ContextMenu>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</UserControl>
