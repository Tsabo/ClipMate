<Window x:Class="ClipMate.App.Views.SetupWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ClipMate Setup"
        Height="620"
        Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Padding="30,20"
                Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
            <StackPanel>
                <TextBlock Text="Welcome to ClipMate"
                           FontSize="24"
                           FontWeight="SemiBold" />
                <TextBlock Text="Let's set up your clipboard manager"
                           FontSize="14"
                           Margin="0,8,0,0"
                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
            </StackPanel>
        </Border>

        <!-- Content -->
        <Border Grid.Row="1" Padding="30,20">
            <StackPanel>
                <!-- Database Name Section -->
                <TextBlock Text="Database Name"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10" />

                <TextBlock Text="Give your clipboard database a descriptive name:"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"
                           FontSize="13" />

                <TextBox x:Name="DatabaseNameTextBox"
                         Padding="8"
                         VerticalContentAlignment="Center"
                         BorderThickness="1"
                         Margin="0,0,0,25"
                         MaxLength="100" />

                <!-- Database Location Section -->
                <TextBlock Text="Database Location"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10" />

                <TextBlock Text="Choose where ClipMate will store your clipboard history:"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"
                           FontSize="13" />

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="DatabasePathTextBox"
                             Grid.Column="0"
                             Padding="8"
                             VerticalContentAlignment="Center"
                             IsReadOnly="True"
                             BorderThickness="1" />

                    <Button x:Name="BrowseButton"
                            Grid.Column="1"
                            Content="Browse..."
                            Padding="15,8"
                            Margin="10,0,0,0"
                            Click="BrowseButton_Click" />
                </Grid>

                <!-- Info Panel -->
                <Border Background="#F0F0F0"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Padding="15"
                        CornerRadius="4"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock FontWeight="SemiBold"
                                   Margin="0,0,0,8"
                                   FontSize="13">
                            <Run Text="ℹ️" /> What gets stored?
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" FontSize="12">
                            • Clipboard history (text, images, files)
                            <LineBreak />
                            • Collections and folders
                            <LineBreak />
                            • Templates and PowerPaste shortcuts
                            <LineBreak />
                            • Application settings
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Footer Buttons -->
        <Border Grid.Row="2"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                Padding="20"
                Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button x:Name="CancelButton"
                        Grid.Column="1"
                        Content="Cancel"
                        Padding="20,8"
                        MinWidth="90"
                        Margin="0,0,10,0"
                        Click="CancelButton_Click" />

                <Button x:Name="ContinueButton"
                        Grid.Column="2"
                        Content="Continue"
                        Padding="20,8"
                        MinWidth="90"
                        Click="ContinueButton_Click"
                        IsDefault="True" />
            </Grid>
        </Border>

        <!-- Progress Overlay (hidden by default) -->
        <Border x:Name="ProgressOverlay"
                Grid.RowSpan="3"
                Background="#CC000000"
                Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="Setting up ClipMate..."
                           FontSize="18"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20" />
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="4" />
                <TextBlock x:Name="ProgressText"
                           Text="Creating database..."
                           FontSize="14"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
