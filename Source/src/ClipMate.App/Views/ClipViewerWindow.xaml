<dx:ThemedWindow x:Class="ClipMate.App.Views.ClipViewerWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns:controls="clr-namespace:ClipMate.App.Controls"
                 xmlns:viewmodels="clr-namespace:ClipMate.App.ViewModels"
                 d:DataContext="{d:DesignInstance Type=viewmodels:ClipViewerViewModel}"
                 mc:Ignorable="d"
                 Title="{Binding WindowTitle}"
                 Width="900"
                 Height="700"
                 WindowStartupLocation="Manual"
                 ShowInTaskbar="True">

    <Grid>
        <controls:ClipViewerControl x:Name="ClipViewer"
                                    ClipId="{Binding ClipId}" />

        <!-- Loading Overlay -->
        <Border Background="#CC000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <dx:LoadingDecorator />
                <TextBlock Text="Loading clip..."
                           Margin="0,10,0,0"
                           Foreground="White"
                           FontSize="14" />
            </StackPanel>
        </Border>
    </Grid>
</dx:ThemedWindow>
