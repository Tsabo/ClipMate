<dx:ThemedWindow x:Class="ClipMate.App.Views.OptionsDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                 xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                 xmlns:vm="clr-namespace:ClipMate.App.ViewModels"
                 xmlns:models="clr-namespace:ClipMate.Core.Models.Configuration;assembly=ClipMate.Core"
                 d:DataContext="{d:DesignInstance Type=vm:OptionsViewModel}"
                 mc:Ignorable="d"
                 Title="Options"
                 Width="700"
                 Height="625"
                 WindowStartupLocation="CenterOwner"
                 ResizeMode="CanResize"
                 ShowInTaskbar="False">

    <!-- DevExpress Dialog Buttons -->
    <dx:ThemedWindow.DialogButtons>
        <dx:ThemedWindowDialogButton Content="OK"
                                     Command="{Binding OkCommand}"
                                     IsDefault="True"
                                     DialogResult="OK"
                                     MinWidth="80" />
        <dx:ThemedWindowDialogButton Content="Cancel"
                                     Command="{Binding CancelCommand}"
                                     IsCancel="True"
                                     DialogResult="Cancel"
                                     MinWidth="80" />
        <dx:ThemedWindowDialogButton Content="Help"
                                     Command="{Binding HelpCommand}"
                                     DialogResult="None"
                                     MinWidth="80" />
    </dx:ThemedWindow.DialogButtons>

    <dx:DXTabControl SelectedIndex="{Binding SelectedTabIndex}">

        <dx:DXTabItem Header="General">
            <dxlc:LayoutControl Orientation="Vertical" Padding="0">

                <!-- Startup Section -->
                <dxlc:LayoutGroup View="GroupBox" Header="Startup" Orientation="Vertical">
                    
                    <dxlc:LayoutItem>
                        <!-- Load Classic at Startup -->
                        <StackPanel Orientation="Horizontal">
                            <dxe:CheckEdit Content="Load Classic (ClipBar) at startup"
                                        IsChecked="{Binding LoadClassicAtStartup}"
                                        ToolTip="Automatically open the ClipBar when application starts"
                                        Margin="0,0,5,0" />

                            <!-- Load Explorer at Startup -->
                            <dxe:CheckEdit Content="Load Explorer (main window) at startup"
                                        IsChecked="{Binding LoadExplorerAtStartup}"
                                        ToolTip="Automatically open the main window when application starts" />
                        </StackPanel>
                    </dxlc:LayoutItem>

                    <!-- Initial Show Mode -->
                    <dxlc:LayoutItem Label="If neither, initial show mode:">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Nothing"
                                         IsChecked="{Binding InitialShowMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:InitialShowMode.Nothing}}"
                                         GroupName="InitialShowMode" Margin="0,0,5,0"/>
                            <RadioButton Content="Classic"
                                         IsChecked="{Binding InitialShowMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:InitialShowMode.Classic}}"
                                         GroupName="InitialShowMode" Margin="0,0,5,0"/>
                            <RadioButton Content="Explorer"
                                         IsChecked="{Binding InitialShowMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:InitialShowMode.Explorer}}"
                                         GroupName="InitialShowMode" />
                        </StackPanel>
                    </dxlc:LayoutItem>

                    <!-- Start with Windows -->
                    <dxlc:LayoutItem>
                        <dxe:CheckEdit Content="Start with Windows"
                                       IsChecked="{Binding StartWithWindows}"
                                       ToolTip="Add ClipMate to Windows startup programs" />
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>

                <!-- Updates Section -->
                <dxlc:LayoutGroup View="GroupBox" Header="Updates" Orientation="Vertical">
                    
                    <!-- Check Updates Automatically -->
                    <dxlc:LayoutItem>
                        <dxe:CheckEdit Content="Check for updates automatically"
                                       IsChecked="{Binding CheckUpdatesAutomatically}"
                                       ToolTip="Periodically check for new versions of ClipMate" />
                    </dxlc:LayoutItem>

                    <!-- Update Check Interval -->
                    <dxlc:LayoutItem Label="Check interval (days):" LabelPosition="Left">
                        <dxe:SpinEdit Value="{Binding UpdateCheckIntervalDays}"
                                      MinValue="1"
                                      MaxValue="30"
                                      Increment="1"
                                      IsFloatValue="False"
                                      IsEnabled="{Binding CheckUpdatesAutomatically}"
                                      ToolTip="Number of days between automatic update checks (1-30)" />
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>

                <!-- Collections Section -->
                <dxlc:LayoutGroup View="GroupBox" Header="Collections" Orientation="Vertical">
                    
                    <!-- Confirm Deletion -->
                    <dxlc:LayoutItem>
                        <dxe:CheckEdit Content="Confirm deletion from safe collections"
                                       IsChecked="{Binding ConfirmDeletionFromSafeCollections}"
                                       ToolTip="Show confirmation dialog when deleting items from safe collections" />
                    </dxlc:LayoutItem>

                    <!-- Sort Collections Alphabetically -->
                    <dxlc:LayoutItem>
                        <dxe:CheckEdit Content="Sort collections alphabetically"
                                       IsChecked="{Binding SortCollectionsAlphabetically}"
                                       ToolTip="Display collections in alphabetical order" />
                    </dxlc:LayoutItem>

                    <!-- Collection Icon Click Behavior -->
                    <dxlc:LayoutItem Label="Collection icon click behavior:">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Menu appears"
                                         IsChecked="{Binding CollectionIconClickBehavior, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:CollectionIconClickBehavior.MenuAppears}}"
                                         GroupName="CollectionIconClick" Margin="0,0,5,0"/>
                            <RadioButton Content="Next collection selected"
                                         IsChecked="{Binding CollectionIconClickBehavior, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:CollectionIconClickBehavior.NextCollectionSelected}}"
                                         GroupName="CollectionIconClick" />
                        </StackPanel>
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>

                <!-- UI Behavior Section -->
                <dxlc:LayoutGroup View="GroupBox" Header="UI Behavior" Orientation="Vertical">
                    
                    <!-- Mousewheel Selects Clip -->
                    <dxlc:LayoutItem>
                        <dxe:CheckEdit Content="Mousewheel selects clip"
                                       IsChecked="{Binding MousewheelSelectsClip}"
                                       ToolTip="Allow using mouse wheel to select clips in the list" />
                    </dxlc:LayoutItem>

                    <!-- Explorer Layout -->
                    <dxlc:LayoutItem Label="Explorer layout mode:">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Full width editor"
                                         IsChecked="{Binding ExplorerLayout, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:ExplorerLayoutMode.FullWidthEditor}}"
                                         GroupName="ExplorerLayout" Margin="0,0,5,0"/>
                            <RadioButton Content="Full height collection tree"
                                         IsChecked="{Binding ExplorerLayout, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:ExplorerLayoutMode.FullHeightCollectionTree}}"
                                         GroupName="ExplorerLayout" />
                        </StackPanel>
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>

                <!-- Reset Button -->
                <dxlc:LayoutItem>
                    <Button Content="Reset to Defaults"
                            Command="{Binding ResetGeneralToDefaultsCommand}"
                            HorizontalAlignment="Left"
                            Padding="10,5"
                            Margin="0,10,0,0" />
                </dxlc:LayoutItem>

            </dxlc:LayoutControl>
        </dx:DXTabItem>

        <!-- Pasting Tab -->
        <dx:DXTabItem Header="Pasting">
            <dxlc:LayoutControl Orientation="Vertical" Padding="0">

                <!-- PowerPaste Section -->
                <dxlc:LayoutGroup View="GroupBox" Header="PowerPaste" Orientation="Vertical">

                    <!-- PowerPaste Delay -->
                    <dxlc:LayoutItem Label="Delay (milliseconds):" LabelPosition="Left">
                        <dxe:SpinEdit Value="{Binding PowerPasteDelay}"
                                      MinValue="0"
                                      MaxValue="5000"
                                      Increment="50"
                                      IsFloatValue="False"
                                      ToolTip="Delay between PowerPaste operations (0-5000 ms)" />
                    </dxlc:LayoutItem>

                    <dxlc:LayoutGroup Orientation="Horizontal">

                        <!-- Loop -->
                        <dxlc:LayoutItem>
                            <dxe:CheckEdit Content="Loop (restart sequence at end)"
                                           IsChecked="{Binding PowerPasteLoop}"
                                           ToolTip="When PowerPaste reaches the end, loop back to the beginning" />
                        </dxlc:LayoutItem>

                        <!-- PowerPaste Shield -->
                        <dxlc:LayoutItem>
                            <dxe:CheckEdit Content="PowerPaste Shield (stealth mode)"
                                           IsChecked="{Binding PowerPasteShield}"
                                           ToolTip="Prevents other applications from detecting clipboard changes during PowerPaste" />
                        </dxlc:LayoutItem>

                    </dxlc:LayoutGroup>

                    <dxlc:LayoutGroup View="GroupBox" Header="Exploding PowerPaste" Orientation="Vertical">

                        <!-- Explode Mode -->
                        <dxlc:LayoutItem>
                            <dxe:CheckEdit Content="Explode Into Fragments"
                                           IsChecked="{Binding PowerPasteExplode}"
                                           ToolTip="Split clips into fragments based on delimiters" />
                        </dxlc:LayoutItem>

                        <!-- Delimiter -->
                        <dxlc:LayoutItem Label="Delimiters:" LabelPosition="Left">
                            <dxe:TextEdit Text="{Binding PowerPasteDelimiter, UpdateSourceTrigger=PropertyChanged}"
                                          IsEnabled="{Binding PowerPasteExplode}"
                                          ToolTip="Characters used to split fragments. Use \n for newline, \t for tab. Default: ,.;:\n\t" />
                        </dxlc:LayoutItem>

                        <!-- Trim -->
                        <dxlc:LayoutItem>
                            <dxe:CheckEdit Content="Trim whitespace from fragments"
                                           IsChecked="{Binding PowerPasteTrim}"
                                           IsEnabled="{Binding PowerPasteExplode}"
                                           ToolTip="Remove leading and trailing spaces from each fragment" />
                        </dxlc:LayoutItem>

                        <!-- Include Delimiter -->
                        <dxlc:LayoutItem>
                            <dxe:CheckEdit Content="Include delimiter in pasted text"
                                           IsChecked="{Binding PowerPasteIncludeDelimiter}"
                                           IsEnabled="{Binding PowerPasteExplode}"
                                           ToolTip="Append the delimiter character to each fragment" />
                        </dxlc:LayoutItem>

                    </dxlc:LayoutGroup>

                </dxlc:LayoutGroup>

                <!-- Outbound Clip Filtering Section (Stubbed) -->
                <dxlc:LayoutGroup View="GroupBox" Header="Outbound Clip Filtering" Orientation="Vertical">

                    <dxlc:LayoutItem>
                        <TextBlock Text="Filter clips before pasting based on content, format, or application."
                               TextWrapping="Wrap"
                               Foreground="Gray"
                               Margin="0,0,0,8" />
                    </dxlc:LayoutItem>

                    <!-- Placeholder for future implementation -->
                    <dxlc:LayoutItem>
                        <dxe:CheckEdit Content="Enable Outbound Filtering"
                                       IsEnabled="False"
                                       ToolTip="Feature coming soon" />
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem Label="Filter by format:" LabelPosition="Left">
                        <dxe:ComboBoxEdit IsEnabled="False"
                                          ToolTip="Feature coming soon">
                            <dxe:ComboBoxEditItem Content="Text Only" />
                            <dxe:ComboBoxEditItem Content="Rich Text" />
                            <dxe:ComboBoxEditItem Content="Images" />
                            <dxe:ComboBoxEditItem Content="All Formats" />
                        </dxe:ComboBoxEdit>
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem>
                        <dxe:CheckEdit Content="Strip formatting on paste"
                                       IsEnabled="False"
                                       ToolTip="Feature coming soon" />
                    </dxlc:LayoutItem>

                    <dxlc:LayoutItem>
                        <TextBlock Text="Note: Outbound Clip Filtering functionality will be implemented in a future release."
                                   TextWrapping="Wrap"
                                   FontStyle="Italic"
                                   Foreground="Orange"
                                   FontSize="10"
                                   Margin="0,8,0,0" />
                    </dxlc:LayoutItem>

                </dxlc:LayoutGroup>

                <!-- Reset Button -->
                <dxlc:LayoutItem>
                    <dx:SimpleButton Content="Reset to Defaults"
                                     Command="{Binding ResetPowerPasteToDefaultsCommand}"
                                     HorizontalAlignment="Left"
                                     Padding="12,6" />
                </dxlc:LayoutItem>

            </dxlc:LayoutControl>
        </dx:DXTabItem>

        <!-- Editor Tab -->
        <dx:DXTabItem Header="Editor">
            <dxlc:LayoutControl Orientation="Vertical" Padding="0">

                <!-- Text Editor Display Section -->
                <dxlc:LayoutGroup View="GroupBox" Header="Text Editor Display" Orientation="Vertical">

                    <dxlc:LayoutGroup Orientation="Horizontal">

                        <!-- Show Line Numbers -->
                        <dxlc:LayoutItem>
                            <dxe:CheckEdit Content="Show line numbers"
                                           IsChecked="{Binding ShowLineNumbersInEditor}"
                                           ToolTip="Display line numbers in the left margin of the text editor" />
                        </dxlc:LayoutItem>

                        <!-- Display Word and Character Counts -->
                        <dxlc:LayoutItem>
                            <dxe:CheckEdit Content="Display word and character counts"
                                           IsChecked="{Binding DisplayWordAndCharacterCounts}"
                                           ToolTip="Show word and character counts in the editor status bar" />
                        </dxlc:LayoutItem>

                        <!-- Smooth Scrolling -->
                        <dxlc:LayoutItem>
                            <dxe:CheckEdit Content="Smooth scrolling"
                                           IsChecked="{Binding SmoothScrolling}"
                                           ToolTip="Enable smooth animated scrolling in the text editor" />
                        </dxlc:LayoutItem>

                    </dxlc:LayoutGroup>

                    <dxlc:LayoutGroup Orientation="Horizontal">

                        <!-- Word Wrap -->
                        <dxlc:LayoutItem>
                            <dxe:CheckEdit Content="Word wrap"
                                       IsChecked="{Binding EditorWordWrap}"
                                       ToolTip="Wrap long lines to fit within the editor width" />
                        </dxlc:LayoutItem>

                        <!-- Show Minimap -->
                        <dxlc:LayoutItem>
                            <dxe:CheckEdit Content="Show minimap"
                                       IsChecked="{Binding ShowMinimap}"
                                       ToolTip="Display a minimap overview of the document on the right side of the editor" />
                        </dxlc:LayoutItem>

                        <!-- Show Toolbar -->
                        <dxlc:LayoutItem>
                            <dxe:CheckEdit Content="Show toolbar"
                                       IsChecked="{Binding ShowToolbar}"
                                       ToolTip="Display the editor toolbar with formatting options" />
                        </dxlc:LayoutItem>

                    </dxlc:LayoutGroup>

                    <!-- Tab Stops -->
                    <dxlc:LayoutItem Label="Tab stops:" LabelPosition="Left">
                        <dxe:SpinEdit Value="{Binding TabStops}"
                                      MinValue="1"
                                      MaxValue="16"
                                      Increment="1"
                                      IsFloatValue="False"
                                      ToolTip="Number of spaces per tab character (1-16)" />
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>

                <!-- Editor Appearance Section -->
                <dxlc:LayoutGroup View="GroupBox" Header="Editor Appearance" Orientation="Vertical">

                    <!-- Theme -->
                    <dxlc:LayoutItem Label="Theme:" LabelPosition="Left">
                        <dxe:ComboBoxEdit Text="{Binding EditorTheme, UpdateSourceTrigger=PropertyChanged}"
                                          ToolTip="Select the editor color theme">
                            <dxe:ComboBoxEditItem Content="vs-light" />
                            <dxe:ComboBoxEditItem Content="vs-dark" />
                            <dxe:ComboBoxEditItem Content="hc-black" />
                        </dxe:ComboBoxEdit>
                    </dxlc:LayoutItem>

                    <!-- Font Size -->
                    <dxlc:LayoutItem Label="Font size:" LabelPosition="Left">
                        <dxe:SpinEdit Value="{Binding EditorFontSize}"
                                      MinValue="8"
                                      MaxValue="72"
                                      Increment="1"
                                      IsFloatValue="False"
                                      ToolTip="Editor font size in pixels (8-72)" />
                    </dxlc:LayoutItem>

                    <!-- Font Family -->
                    <dxlc:LayoutItem Label="Font family:" LabelPosition="Left">
                        <dxe:ComboBoxEdit Text="{Binding EditorFontFamily, UpdateSourceTrigger=PropertyChanged}"
                                          IsTextEditable="True"
                                          ToolTip="Editor font family (monospace fonts recommended)">
                            <dxe:ComboBoxEditItem Content="Consolas" />
                            <dxe:ComboBoxEditItem Content="Courier New" />
                            <dxe:ComboBoxEditItem Content="Lucida Console" />
                            <dxe:ComboBoxEditItem Content="Monaco" />
                            <dxe:ComboBoxEditItem Content="Cascadia Code" />
                            <dxe:ComboBoxEditItem Content="Fira Code" />
                            <dxe:ComboBoxEditItem Content="JetBrains Mono" />
                        </dxe:ComboBoxEdit>
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>

                <!-- Clip Viewer Options Section -->
                <dxlc:LayoutGroup View="GroupBox" Header="Clip Viewer Options" Orientation="Horizontal">

                    <!-- Enable Binary View -->
                    <dxlc:LayoutItem>
                        <dxe:CheckEdit Content="Enable Binary View"
                                       IsChecked="{Binding EnableBinaryView}"
                                       ToolTip="Show the Binary tab in the clip viewer for displaying raw clipboard data" />
                    </dxlc:LayoutItem>

                    <!-- Auto Change Clip Titles -->
                    <dxlc:LayoutItem>
                        <dxe:CheckEdit Content="Auto Change Clip Titles"
                                       IsChecked="{Binding AutoChangeClipTitles}"
                                       ToolTip="Automatically update clip titles based on the first line of text when editing content (max 100 characters)" />
                    </dxlc:LayoutItem>

                    <!-- Enable Debug Mode -->
                    <dxlc:LayoutItem>
                        <dxe:CheckEdit Content="Enable debug mode"
                                       IsChecked="{Binding EnableDebugMode}"
                                       ToolTip="Open developer tools for the Monaco editor (for troubleshooting)" />
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>

                <!-- Default View Section -->
                <dxlc:LayoutGroup View="GroupBox" Header="Default View" Orientation="Vertical">

                    <!-- Default Editor View -->
                    <dxlc:LayoutItem Label="Default editor view:" LabelPosition="Left">
                        <dxe:ComboBoxEdit SelectedItem="{Binding DefaultEditorView}"
                                          ToolTip="Select which tab to display by default when viewing clips">
                            <dxe:ComboBoxEditItem Content="Text" Tag="{x:Static models:EditorViewType.Text}" />
                            <dxe:ComboBoxEditItem Content="Unicode" Tag="{x:Static models:EditorViewType.Unicode}" />
                            <dxe:ComboBoxEditItem Content="RTF" Tag="{x:Static models:EditorViewType.Rtf}" />
                            <dxe:ComboBoxEditItem Content="Bitmap" Tag="{x:Static models:EditorViewType.Bitmap}" />
                            <dxe:ComboBoxEditItem Content="Picture" Tag="{x:Static models:EditorViewType.Picture}" />
                            <dxe:ComboBoxEditItem Content="HTML" Tag="{x:Static models:EditorViewType.Html}" />
                            <dxe:ComboBoxEditItem Content="Binary" Tag="{x:Static models:EditorViewType.Binary}" />
                        </dxe:ComboBoxEdit>
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>

                <!-- Reset Button -->
                <dxlc:LayoutItem>
                    <Button Content="Reset to Defaults"
                            Command="{Binding ResetEditorToDefaultsCommand}"
                            HorizontalAlignment="Left"
                            Margin="0,8,0,0" />
                </dxlc:LayoutItem>

            </dxlc:LayoutControl>
        </dx:DXTabItem>

        <!-- Capturing Tab -->
        <dx:DXTabItem Header="Capturing">
            <dxlc:LayoutControl Orientation="Vertical" Padding="0">

                <!-- Startup & Monitoring Section -->
                <dxlc:LayoutGroup View="GroupBox" Header="Startup &amp; Monitoring" Orientation="Vertical">
                    
                    <!-- Enable Auto-Capture at Startup -->
                    <dxlc:LayoutItem>
                        <dxe:CheckEdit Content="Enable auto-capture when application starts"
                                       IsChecked="{Binding EnableAutoCaptureAtStartup}"
                                       ToolTip="Automatically start monitoring the clipboard when ClipMate launches" />
                    </dxlc:LayoutItem>

                    <!-- Capture Existing Clipboard at Startup -->
                    <dxlc:LayoutItem>
                        <dxe:CheckEdit Content="Capture existing clipboard content at startup"
                                       IsChecked="{Binding CaptureExistingClipboardAtStartup}"
                                       ToolTip="Capture whatever is currently on the clipboard as the first clip when starting monitoring" />
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>

                <!-- File Handling & Collections Section -->
                <dxlc:LayoutGroup View="GroupBox" Header="File Handling &amp; Collections" Orientation="Vertical">
                    
                    <!-- Auto-Expand HDROP File Pointers -->
                    <dxlc:LayoutItem>
                        <dxe:CheckEdit Content="Automatically expand HDROP file pointers to text"
                                       IsChecked="{Binding AutoExpandHdropFilePointers}"
                                       ToolTip="Convert file paths from HDROP format to readable text (always enabled internally)" />
                    </dxlc:LayoutItem>

                    <!-- Default Accept Clips from Clipboard -->
                    <dxlc:LayoutItem>
                        <dxe:CheckEdit Content="New collections accept clips from clipboard by default"
                                       IsChecked="{Binding DefaultAcceptClipsFromClipboard}"
                                       ToolTip="When creating new collections, set AcceptClipsFromClipboard to true by default" />
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>

                <!-- Appending Section -->
                <dxlc:LayoutGroup View="GroupBox" Header="Appending" Orientation="Vertical">
                    
                    <!-- Append Separator String -->
                    <dxlc:LayoutItem Label="Separator between appended clips:" LabelPosition="Top">
                        <dxe:TextEdit Text="{Binding AppendSeparatorString, UpdateSourceTrigger=PropertyChanged}"
                                      ToolTip="String to insert between clips when appending. Supports \n (newline), \t (tab), \r (carriage return). Empty string = direct concatenation">
                            <dxe:TextEdit.StyleSettings>
                                <dxe:TextEditStyleSettings />
                            </dxe:TextEdit.StyleSettings>
                        </dxe:TextEdit>
                    </dxlc:LayoutItem>

                    <!-- Strip Trailing Line Break -->
                    <dxlc:LayoutItem>
                        <dxe:CheckEdit Content="Strip trailing line breaks when appending"
                                       IsChecked="{Binding StripTrailingLineBreak}"
                                       ToolTip="Remove \r\n, \n, or \r from the end of each clip before appending" />
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>

                <!-- Reset Button -->
                <dxlc:LayoutItem>
                    <Button Content="Reset to Defaults"
                            Command="{Binding ResetCapturingToDefaultsCommand}"
                            HorizontalAlignment="Left"
                            Margin="0,8,0,0" />
                </dxlc:LayoutItem>

            </dxlc:LayoutControl>
        </dx:DXTabItem>

        <!-- General Tab -->


        <dx:DXTabItem Header="Appearance" IsEnabled="False">
            <TextBlock Text="Appearance options will be added here"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="Gray" />
        </dx:DXTabItem>

        <dx:DXTabItem Header="Sounds" IsEnabled="False">
            <TextBlock Text="Sound options will be added here"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="Gray" />
        </dx:DXTabItem>

    </dx:DXTabControl>

</dx:ThemedWindow>
