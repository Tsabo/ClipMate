<dx:ThemedWindow x:Class="ClipMate.App.Views.OptionsDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns:vm="clr-namespace:ClipMate.App.ViewModels"
                 xmlns:options="clr-namespace:ClipMate.App.Views.Options"
                 d:DataContext="{d:DesignInstance Type=vm:OptionsViewModel}"
                 mc:Ignorable="d"
                 Title="Options"
                 Width="700"
                 Height="625"
                 WindowStartupLocation="CenterOwner"
                 ResizeMode="CanResize"
                 ShowInTaskbar="False">

    <!-- DevExpress Dialog Buttons -->
    <dx:ThemedWindow.DialogButtons>
        <dx:ThemedWindowDialogButton Content="OK"
                                     Command="{Binding OkCommand}"
                                     IsDefault="True"
                                     DialogResult="OK"
                                     MinWidth="80" />
        <dx:ThemedWindowDialogButton Content="Cancel"
                                     Command="{Binding CancelCommand}"
                                     IsCancel="True"
                                     DialogResult="Cancel"
                                     MinWidth="80" />
        <dx:ThemedWindowDialogButton Content="Help"
                                     Command="{Binding HelpCommand}"
                                     DialogResult="None"
                                     MinWidth="80" />
    </dx:ThemedWindow.DialogButtons>

    <dx:DXTabControl SelectedIndex="{Binding SelectedTabIndex}">

        <!-- General Tab -->
        <dx:DXTabItem Header="General">
            <options:GeneralOptionsControl />
        </dx:DXTabItem>

        <!-- Pasting Tab -->
        <dx:DXTabItem Header="Pasting">
            <options:PastingOptionsControl />
        </dx:DXTabItem>

        <!-- Editor Tab -->
        <dx:DXTabItem Header="Editor">
            <options:EditorOptionsControl />
        </dx:DXTabItem>

        <!-- Capturing Tab -->
        <dx:DXTabItem Header="Capturing">
            <options:CapturingOptionsControl />
        </dx:DXTabItem>

        <!-- Application Profiles Tab -->
        <dx:DXTabItem Header="App Profiles">
            <options:ApplicationProfilesOptionsControl />
        </dx:DXTabItem>

        <!-- Appearance Tab (Stub) -->
        <dx:DXTabItem Header="Appearance" IsEnabled="False">
            <TextBlock Text="Appearance options will be added here"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="Gray" />
        </dx:DXTabItem>

        <!-- Sounds Tab (Stub) -->
        <dx:DXTabItem Header="Sounds" IsEnabled="False">
            <TextBlock Text="Sound options will be added here"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="Gray" />
        </dx:DXTabItem>

    </dx:DXTabControl>

</dx:ThemedWindow>
