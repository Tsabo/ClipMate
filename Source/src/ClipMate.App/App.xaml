<Application x:Class="ClipMate.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:ClipMate.App.Converters"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Font Families -->
            <FontFamily x:Key="ClipMateEmojis">pack://application:,,,/Assets/#ClipMate Emojis</FontFamily>
            <!-- Global Converters -->
            <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
            <dxmvvm:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <dxmvvm:BooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter" Inverse="True" />
            <dxmvvm:NumericToVisibilityConverter x:Key="CountToVisibilityConverter" />
            <converters:ObjectEqualityConverter x:Key="ObjectEqualityConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
